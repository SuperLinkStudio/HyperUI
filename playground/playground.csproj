<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <id>HyperUI</id>
        <version>1.0.0</version>
        <authors>Super Link Studio</authors>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="HyperUI\**\*">
            <Pack>true</Pack>
            <PackagePath>contentFiles\any\any\HyperUI\</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Remove="bin\**" />
        <None Remove="obj\**" />
        <None Remove="**\*" />
    </ItemGroup>

</Project>
